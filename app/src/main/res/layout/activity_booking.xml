<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".BookingActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nestedScroll"
        android:background="@color/White300">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Main Image Banner -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/bannerImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/item_img_bg" />
            </androidx.cardview.widget.CardView>

            <!-- Hotel Name and Like Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/hotelName"
                    android:layout_width="280dp"
                    android:layout_height="74dp"
                    android:fontFamily="@font/helvetica_bold"
                    android:gravity="center"
                    android:text="Cozrum Homes Premier Residences"
                    android:textColor="@color/GlacierBlueColor"
                    android:textSize="23dp" />

                <TextView
                    android:id="@+id/roomPrice"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_bold"
                    android:gravity="center"
                    android:text="200.000 đ"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

            </LinearLayout>

            <!-- Price and Room Options -->

            <!-- Date Picker -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check-in Date:"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/helvetica_bold" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtCheckin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:textColor="#797979"
                    android:text=""
                    android:hint="Check-in"/>

                <Button
                    android:id="@+id/checkInDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Select Date"
                    android:background="@drawable/button_bg"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="10dp"
                android:gravity="center|fill_horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check-out Date:"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/helvetica_bold" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtCheckout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:textColor="#797979"
                    android:hint="Check-out"
                    android:text="" />

                <Button
                    android:id="@+id/checkOutDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:paddingHorizontal="10dp"

                    android:text="Select Date"
                    android:background="@drawable/button_bg"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <!-- Voucher Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/report_bg"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã giảm giá:  "
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/helvetica_bold" />

                <Spinner
                    android:id="@+id/spinnerVoucher"
                    android:layout_width="108dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/applyVoucherButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Áp dụng"
                    android:background="@drawable/button_bg"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <!-- Address and Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/report_bg"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng số ngày đặt:"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtSoNgay"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:layout_marginLeft="160dp"
                    android:textColor="#000000"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/report_bg"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giảm giá: "
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtGiamGia"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="215dp"
                    android:gravity="center"
                    android:text="-0 đ"
                    android:textColor="#000000"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/report_bg"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng thanh toán: "
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtTongTien"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="155dp"
                    android:gravity="center"
                    android:text="0 đ"
                    android:textColor="#F44336"
                    android:textStyle="bold"
                    android:textSize="16dp" />

            </LinearLayout>

            <!-- Booking Buttons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá đã bao gồm 8% thuế và 5% phí dịch vụ."
                android:textColor="#A6A3A3"
                android:textSize="15dp"
                android:padding="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chúng tôi cam đoan những gì đã cung cấp là đúng sự thật nhằm mang đến trải nhiệm tốt nhất cho khách hàng."
                android:textColor="#A6A3A3"
                android:textSize="15dp"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center">

                <Button
                    android:id="@+id/bookNowButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đặt ngay"
                    android:background="@drawable/button_bg"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/helvetica_bold" />

                <Button
                    android:id="@+id/contactButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Liên hệ"
                    android:background="@drawable/button_bg"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/helvetica_bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
