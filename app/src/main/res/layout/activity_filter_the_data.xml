<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".FilterTheDataActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White300">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <!-- Filter by Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lọc theo giá phòng"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/helvetica_bold" />

                <SeekBar
                    android:id="@+id/priceSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="1000000"
                    android:progress="200000"
                    android:paddingTop="10dp" />

                <TextView
                    android:id="@+id/priceRangeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá: 200.000 đ"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/helvetica_neue_medium" />
            </LinearLayout>

            <!-- Filter by Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lọc theo khu vực"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/helvetica_bold" />

                <Spinner
                    android:id="@+id/locationSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/report_bg"
                    android:padding="10dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <!-- Filter by Category -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lọc theo thể loại"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/helvetica_bold" />

                <Spinner
                    android:id="@+id/categorySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/report_bg"
                    android:padding="10dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <!-- Sort by Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sắp xếp theo giá"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/helvetica_bold" />

                <RadioGroup
                    android:id="@+id/sortRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/sortAscRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá tăng dần"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/helvetica_neue" />

                    <RadioButton
                        android:id="@+id/sortDescRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá giảm dần"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/helvetica_neue"
                        android:layout_marginStart="20dp" />
                </RadioGroup>
            </LinearLayout>

            <!-- Apply Filters Button -->
            <Button
                android:id="@+id/applyFiltersButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Áp dụng lọc"
                android:background="@drawable/button_bg"
                android:textColor="#ffffff"
                android:fontFamily="@font/helvetica_bold"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
