<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FilterTheDataActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/IceColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_filter_tinhthanh"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_neue"
                android:text="TP Hồ Chí Minh"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_filter_loai"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/helvetica_neue"
                android:text="Loại Phòng"
                android:textColor="@color/black" />
        </LinearLayout>

        <Button
            android:id="@+id/btnApDung"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:background="@drawable/round_white"
            android:backgroundTint="#FAF8F7"
            android:fontFamily="@font/helvetica_bold"
            android:text="Áp dụng"
            android:textColor="@color/GlacierBlueColor"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_filterprovinder"
        android:layout_width="150dp"
        android:layout_height="680dp"
        android:minWidth="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="258dp"
        android:layout_height="649dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="152dp">

        <Switch
            android:id="@+id/switch_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/helvetica_neue"
            android:text="Giá tăng dần"
            android:textColor="@color/black" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_filter_loai"
            android:layout_width="match_parent"
            android:layout_height="662dp" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>