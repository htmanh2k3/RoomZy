<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imgVoucher"
            android:layout_width="144dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/app4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:background="@color/White300"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvGiamGia"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Giảm 30%"
                    android:textColor="@color/teal_700"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNameVoucher"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="@color/teal_700"
                    android:textSize="8pt"
                    android:text="Dành cho người mới"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvMoTa"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:text="Áp dụng hóa đơn đầu tiên"
                android:textStyle="normal" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>